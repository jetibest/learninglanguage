package languagelearning;

public class GridObject
{
	private int x;
	private int y;
	
	public GridObject(int x, int y)
	{
		this.x = x;
		this.y = y;
	}
	
	public void moveNorth()
	{
		if(y == 0)
		{
			return;
		}
		y--;
	}
	
	public void moveEast()
	{
		if(x + 1 == LearningLanguage.GRID_WIDTH)
		{
			return;
		}
		x++;
	}
	
	public void moveSouth()
	{
		if(y + 1 == LearningLanguage.GRID_HEIGHT)
		{
			return;
		}
		y++;
	}
	
	public void moveWest()
	{
		if(x == 0)
		{
			return;
		}
		x--;
	}
	
	public int getX()
	{
		return x;
	}
	
	public int getY()
	{
		return y;
	}
	
}
